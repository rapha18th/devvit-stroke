{
  "$schema": "https://developers.reddit.com/schema/config-file.v1.json",
  "name": "devvit-stroke",
  "post": { "dir": "dist/client", "entrypoints": { "default": { "entry": "index.html" } } },
  "server": { "dir": "dist/server", "entry": "index.cjs" },
  "permissions": {
    "http": {
      "enable": true,
      "domains": ["rairo-dev-stroke.hf.space"]
    }
  },
  "webview": {
    "content": {
      "csp": {
        "default-src": ["'self'"],
        "img-src": ["'self'", "data:", "https://*.redd.it", "https://i.redd.it", "https://i.imgur.com", "https://archive.org", "https://storage.googleapis.com", "https://*.googleapis.com", "https://*.googleusercontent.com"],
        "style-src": ["'self'", "'unsafe-inline'"],
        "script-src": ["'self'"],
        "connect-src": ["'self'", "https://*.reddit.com", "https://*.devvit.net"]
      }
    }
  },
  "menu": {
    "items": [
      { "label": "Create a new post", "description": "devvit-stroke", "location": "subreddit", "forUserType": "moderator", "endpoint": "/internal/menu/post-create" }
    ]
  },
  "triggers": { "onAppInstall": "/internal/on-app-install" },
  "dev": { "subreddit": "devvit_stroke_dev2" }
}
