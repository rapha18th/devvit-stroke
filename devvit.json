{
  "$schema": "https://developers.reddit.com/schema/config-file.v1.json",
  "name": "devvit-stroke",

  "post": {
    "dir": "dist/client",
    "entrypoints": {
      "default": { "entry": "index.html" }
    }
  },

  "server": {
    "dir": "dist/server",
    "entry": "index.cjs"
  },

  "webview": {
    "csp": {
      "default-src": ["'self'"],
      "script-src": ["'self'"],
      "style-src": ["'self'", "'unsafe-inline'"],
      "img-src": [
        "'self'",
        "data:",
        "blob:",
        "https://*.redd.it",
        "https://i.redd.it",
        "https://i.imgur.com",
        "https://archive.org",
        "https://storage.googleapis.com",
        "https://*.googleapis.com",
        "https://*.googleusercontent.com",
        "https://rairo-dev-stroke.hf.space",
        "https://*.hf.space"
      ],
      "media-src": [
        "https://storage.googleapis.com",
        "data:",
        "blob:"
      ],
      "connect-src": [
        "'self'",
        "https://rairo-dev-stroke.hf.space",
        "https://*.hf.space",
        "https://archive.org",
        "https://storage.googleapis.com",
        "https://*.googleapis.com"
      ]
    }
  },

  "media": {},

  "menu": {
    "items": [
      {
        "label": "Create a new post",
        "description": "devvit-stroke",
        "location": "subreddit",
        "forUserType": "moderator",
        "endpoint": "/internal/menu/post-create"
      }
    ]
  },

  "triggers": {
    "onAppInstall": "/internal/on-app-install"
  },

  "dev": {
    "subreddit": "devvit_stroke_dev2"
  }
}
